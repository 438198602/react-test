.app {
  width: 100%;
  height: 100%;
  color: #333;
  background-color: #fff;

  .app-header {
    height: 55px;
    line-height: 55px;
    color: #FFD700;
    text-align: center;

    .app-title {
      display: inline-block;
      height: 55px;
      margin-left: 10px;
      font-size: 18px;
      font-weight: 300;
    }
  }
  .app-tab {
    position: fixed;
    bottom: 0;
    display: flex;
    width: 100%;
    height: 30px;
    line-height: 30px;
    color: inherit;
    text-align: center;

    .tab-item {
      flex: 1;
    }
  }
  .app-view {
    position: fixed;
    top: 55px;
    left: 0;
    bottom: 30px;
    width: 100%;
  }
}

.nav-link {
  display: block;
  color: inherit;
  text-decoration: none;
  border-top: 2px solid #f5f5f5;
  background-color #f5f5f5;

  &.active {
    color: #77A9FD;
    border-top: 2px solid #FFD700;
  }
}
